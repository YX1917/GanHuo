<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 没有此设置toolbar会上移，没有状态栏-->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:title">@string/empty</item>



    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <declare-styleable name="ExceptionView">
        <attr name="exp_msg" format="string|reference"/>
        <attr name="exp_icon" format="reference"/>
        <attr name="exp_action_btn_shown" format="boolean"/>
        <attr name="exp_action_btn_title" format="string|reference"/>
    </declare-styleable>

</resources>
