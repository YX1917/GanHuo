<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_xs"
    android:layout_margin="@dimen/margin_xs"
    android:background="@drawable/item_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_l">

        <TextView
            android:id="@+id/tv_android_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="我是标题" />

        <TextView
            android:id="@+id/tv_android_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_android_who"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:text="时间" />

        <TextView
            android:id="@+id/tv_android_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_android_title"
            android:layout_marginStart="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l"
            android:text="作者" />
    </RelativeLayout>


</LinearLayout>